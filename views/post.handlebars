<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>{{post.body}}</p>
  <p>Created by {{post.user.userName}} on {{format_date post.date_created}}</p>
</div>

<div class="text-center" id="comment-div"> <!--in javascript once the user presses submit, post request, hide this div and refresh-->
    <label for="comment"> Comment:</label>
    <input class="form-input" type="text" id="comment" placeholder="enter a comment" />
    <p> <button class="btn btn-primary" data-id="{{post.id}}"> Submit </button> </p> <!--post_id here-->
</div>


<div class="row mb-4 project">
  {{#if post.comments.length}}
    <div class="col-md-7"><h3>Comments:</h3></div>
  {{#each post.comments as |comment|}}
    <div class="col-md-7">
        <p>{{comment.body}}</p>
        <p>Posted on {{format_date comment.date_created}}</p>
    </div>
  {{/each}}
  {{/if}}
</div>    

<script src="/js/comment.js"></script>