<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.userName}}!</h2>
  </div>
</div>

<p> <button class="btn btn-primary"> + New Post </button> </p> <!--javascript- click, shows create new post form-->

<div class="row mt-4">
  <div class="col-md-6">
    <h3> Create New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post-title"> Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body"> Content:</label>
        <input class="form-input" type="text" id="post-body" name="post-body" />
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create </button> <!--in javascript once the user presses create, post request, hide and refresh-->
      </div> 
      
      </div>
    </form>
  </div>

  {{#if user.posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">

      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>

      <div class="col-md-4">
        <button class="btn btn-primary" data-id="{{project.id}}">DELETE</button>
      </div>
      <div class="col-md-4">
        <button class="btn btn-primary" data-id="{{project.id}}">UPDATE</button>
      </div>

    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>