  <div class="col-md-6">
    <h2>Sign-Up</h2>

    <form class="form signup-form">                                     <!--belongs to 2 classes- form and login-form-->
      
      <div class="form-group">
        <label for="userName-signup"> User Name:</label>
        <input class="form-input" type="text" id="userName-signup" />
      </div>
      
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>

      <a href="/login">Login instead?</a>
    </form>
  </div>


  <script src="/js/signup.js"></script>